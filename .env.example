# GarageGuru Production Environment Variables
# Copy this file to .env for local development

# Database Configuration (Required)
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Authentication Secret (Required)
JWT_SECRET="your-super-secure-jwt-secret-key-change-this-in-production"

# Gmail SMTP Configuration (Required for email features)
GMAIL_USER="your-gmail@gmail.com"
GMAIL_APP_PASSWORD="your-16-character-app-password"

# Super Admin Configuration (Required)
SUPER_ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_ACTIVATION_CODE="your-secure-admin-code"
STAFF_ACTIVATION_CODE="your-secure-staff-code"

# Application Configuration
NODE_ENV="production"
PORT="10000"

# Optional: File Storage (if using cloud storage)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key" 
CLOUDINARY_API_SECRET="your-api-secret"

# Optional: Alternative Email Services
SENDGRID_API_KEY="your_sendgrid_api_key"
SENDGRID_FROM_EMAIL="your_verified_email@domain.com"